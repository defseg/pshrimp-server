<% if (doculect.source_url) { %>
	<a href="<%= doculect.source_url %>">
		<%= doculect.source_author %>.
		<%= doculect.source_title  %>.
		<%= doculect.source_year   %>.
	</a>
<% } else { %>
	<%= doculect.source_author %>.
	<%= doculect.source_title  %>.
	<%= doculect.source_year   %>.
<% } %>
<% if (doculect.source_bibkey) { %>
	<a href="https://glottolog.org/resource/reference/id/<%= doculect.source_bibkey %>">
		<%= doculect.source_bibkey %>
	</a>
<% } %>